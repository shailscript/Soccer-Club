@model AravindReddy_K_301101869.Models.Club;

@{
    ViewData["Title"] = "Edit Club";
}

<div class="container m-2 mx-auto">
    <div class="border-bottom-2 border-dark">
        <h2>Edit Club</h2>
    </div>

    <form asp-controller="Crud" asp-action="EditClub" method="post">
        <div class="form-group">
            <label asp-for="clubName">Name</label>
            <input asp-for="clubName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="nation">Address</label>
            <input asp-for="nation" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="nWins">Number of Wins</label>
            <input asp-for="nWins" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="nDraws">Number of Draws</label>
            <input asp-for="nDraws" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="totalPoints">Total Points</label>
            <input asp-for="totalPoints" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="sponsor">Sponsor</label>
            <input asp-for="sponsor" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="description">Description</label>
            <input asp-for="description" class="form-control" />
        </div>

        <div class="form-group mx-auto">
            <button class="btn btn-success" type="submit" value="Create">Update Club</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>


