@model AravindReddy_K_301101869.Models.Player;

@{
    ViewData["Title"] = "Edit Player";
}

<div class="container m-2 mx-auto">
    <div class="border-bottom-2 border-dark">
        <h2>Edit Player</h2>
    </div>

    <div class="container m-2 mx-auto">
        <form asp-controller="Crud" asp-action="EditPlayer" method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="JersyNumber">Jersey Number</label>
                <input asp-for="JersyNumber" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Rank">Rank</label>
                <input asp-for="Rank" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="totalGoals">Total Goals</label>
                <input asp-for="totalGoals" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Club">Club Name</label>
                <select asp-for="Club" asp-items="@( new SelectList(ViewBag.Clubs,"clubName","clubName"))" class="form-control"> </select>
            </div>

            <div class="form-group d-flex justify-content-center">
                <button class="btn btn-success mx-2" type="submit" value="Create">Update Player</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-danger mx-2">Cancel</a>
            </div>
        </form>
    </div>
</div>