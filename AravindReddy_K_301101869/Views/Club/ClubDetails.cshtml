@using AravindReddy_K_301101869.Models.ViewModels

@model PlayerClubViewModel

@{
    ViewData["Title"] = "Club Detail";
}

<div class="container m-2 mx-auto">
    <h2 class="text-center text-uppercase border-bottom p-3">Club Information</h2>

    <div class="d-md-flex justify-content-between pt-5">
        <div id="club-info" class="pr-md-5 border-right w-100">
            @foreach (var c in Model.club)
            {
                <div>
                    <i class="fas fa-sticky-note fa-1x"></i>
                    <h3>Club Name: <span class="text-muted">@c.clubName</span></h3>
                    <p>Description: @c.description</p>
                </div>

                <div>
                    <i class="fas fa-info-circle fa-1x"></i>
                    <h3>Club Information:</h3>
                    <p>Location: @c.nation</p>
                    <p>Total Wins: @c.nWins</p>
                    <p>Total Draws: @c.nDraws</p>
                    <p>Total Points: @c.totalPoints</p>
                    <p>Sponsor: @c.sponsor</p>
                    <br />
                    <div class="d-flex justify-content-around">
                        <form asp-controller="Crud" asp-route-clubname="@c.clubName" asp-action="EditClubForm" method="post">
                            <input type="submit" value="Update Club" class="mx-2 btn btn-warning" />
                        </form>

                        <form asp-controller="Crud" asp-route-clubname="@c.clubName" asp-action="DeleteClub" method="post">
                            <input type="submit" value="Delete Club" class="mx-2 btn btn-danger" />
                        </form>
                    </div>
                </div>
            }
        </div>

        <div id="player-info" class="w-100 pl-5">
            <div class="d-flex justify-content-between">
                <h3>Club Players</h3>
                <a asp-action="ManagePlayers" asp-controller="Players">AddPlayer</a>
            </div>
            @foreach (var p in Model.player)
            {
                <div class="card mb-3">
                    <div class="card-body d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">@p.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">Jersey Number: </small>@p.JersyNumber |&nbsp;
                                <small class="text-muted">Rank: </small>@p.Rank |&nbsp;
                                <small class="text-muted">Goals: </small>@p.totalGoals
                            </p>
                        </div>
                        <div>
                            <a href="#" class="m-2 btn btn-warning">Reassign</a>
                            <a href="#" class="m-2 btn btn-danger">Deregister</a>
                        </div>

                        @*
                            <p>
                                <a asp-action="Edit" asp-route-id="@p.Id">Reassign/Edit Player</a>
                            </p>
                            <a class="btn btn-primary text-white" asp-action="Details" asp-route-id="@p.Id">View details</a>
                        *@
                    </div>
                </div>
            }
        </div>
    </div>
</div>
