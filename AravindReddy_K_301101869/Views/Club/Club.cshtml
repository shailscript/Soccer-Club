@using AravindReddy_K_301101869.Models.ViewModels
@model PlayerClubViewModel

@{
    ViewData["Title"] = "Clubs";
}

<div class="container m-2 mx-auto">
    <div class="d-flex m-2 justify-content-between align-items-center">
        <div>
            <h2>Clubs listed with us</h2>
        </div>
        <div>
            <a class="btn btn-info" asp-controller="Club" asp-action="AddClub">Add a club</a>
        </div>
    </div>

    <div class="d-flex flex-wrap mx-4">
        @foreach (var c in Model.club)
        {
            <div class="card m-2 mb-4" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title border-bottom"><a asp-action="ClubDetails" asp-route-clubName="@c.clubName">@c.clubName</a></h5>
                    <p class="card-text text-muted">@c.description</p>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center align-items-center">
        <div class="px-2">
            <h5 class="font-weight-lighter">Pages : </h5>
        </div>
        <div>
            <div class="pagination" page-model="@Model.PagingInfo" page-action="Club"></div>
        </div>
    </div>
</div>
