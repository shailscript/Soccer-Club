
@using AravindReddy_K_301101869.Models.ViewModels

@model PlayerClubViewModel

@{
    ViewData["Title"] = "Players";
}


<div class="container m-2 mx-auto">
    <div class="d-flex m-2 justify-content-between align-items-center border-bottom-2 border-dark">
        <div>
            <h2>Players listed with us</h2>
        </div>
        <div>
            <a class="btn btn-info" asp-action="AddPlayer" asp-controller="Players">Add a player</a>
        </div>
    </div>

    <div>
        @foreach (var p in Model.player)
        {
            <div class="card mb-3">
                <h5 class="card-header">Club: @p.Club</h5>
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">
                            <small class="text-muted">Jersey Number: </small>@p.JersyNumber |&nbsp;
                            <small class="text-muted">Rank: </small>@p.Rank |&nbsp;
                            <small class="text-muted">Goals: </small>@p.totalGoals
                        </p>
                    </div>
                    <div>
                        <form asp-controller="Crud" asp-route-playerName="@p.Name" asp-action="EditPlayerForm" method="post">
                            <input type="submit" value="Update/Reassign" class="mx-2 btn btn-warning" />
                        </form>

                        <form asp-controller="Crud" asp-action="DeletePlayer" asp-route-playerName="@p.Name" method="post">
                            <input type="submit" value="DeRegister" class="m-2 btn btn-danger" />
                        </form>

                    </div>


                </div>
            </div>
        }
    </div>
    <div page-model="@Model.PagingInfo" page-action="ManagePlayers"></div>
</div>
