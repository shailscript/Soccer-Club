@using AravindReddy_K_301101869.Models

@model IEnumerable<Player>

@{
    ViewData["Title"] = "Players";
}

<div class="container m-2 mx-auto">
    <div class="d-flex m-2 justify-content-between align-items-center border-bottom-2 border-dark">
        <div>
            <h2>Players listed with us</h2>
        </div>
        <div>
            <a class="btn btn-info" asp-action="AddPlayer" asp-controller="Players">Add a player</a>
        </div>
    </div>

    <div>
        @foreach (Player p in Model)
        {
            <div class="card mb-3">
                <h5 class="card-header">Club: @p.Club</h5>
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">
                            <small class="text-muted">Jersey Number: </small>@p.JersyNumber |&nbsp;
                            <small class="text-muted">Rank: </small>@p.Rank |&nbsp;
                            <small class="text-muted">Goals: </small>@p.totalGoals
                        </p>
                    </div>
                    <div>
                        <a href="#" class="m-2 btn btn-warning">Reassign</a>
                        <a href="#" class="m-2 btn btn-danger">Deregister</a>
                    </div>

                    @*
                        <p>
                            <a asp-action="Edit" asp-route-id="@p.Id">Reassign/Edit Player</a>
                        </p>
                        <a class="btn btn-primary text-white" asp-action="Details" asp-route-id="@p.Id">View details</a>
                    *@
                </div>
            </div>
        }
    </div>
</div>
