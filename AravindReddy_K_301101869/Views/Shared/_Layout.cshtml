<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Soccer Club</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100 w-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow pb-0">
            <div class="container d-flex justify-content-between">
                <div class="d-flex justify-content-between">
                    <div>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>

                    <div>
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Soccer Club</a>
                    </div>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Club" asp-action="Club">Club</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Club" asp-action="AddClub">Add Club</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Club" asp-action="ClubDetails">Club Details</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Players" asp-action="ManagePlayers">Manage Players</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mx-0 px-0">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; Arvind, Eunbi, Shailendra.
        </div>
    </footer>
</body>

</html>
